<% logger.debug "path user's id'#{@path_user.id}"%>
<h2><%= owner_text %> Registries</h2>
<div id="registryList">
    <ul>
        <% @path_registries.each do |registry| %>
            <li><%= div_for(registry) do %>
                    <h4><%= link_to registry.name, registry_path(registry) %></h4>
                <% end %></li>
        <% end %>
        <% if is_owner? %>
            <li><%= link_to 'Add a new registry', new_user_registry_path(@current_user) %></li>
        <% end %>
    </ul>
</div>