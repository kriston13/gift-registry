<% if attr_name.errors.any? %>
    <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
            <% attr_name.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
<%= form_for attr_name do |f| -%>
<ul>
  <li><%= f.label :description, "Description" %><%= f.text_field :description%></li>
  <li><%= f.label :value_type, "Select the type of value this will be" %> <%= f.select(:attr_name, :value_type, [['String',"STRING"],['Float',"FLOAT"],["Date time","DATETIME"],["Boolean","BOOLEAN"],["Integer","INTEGER"]])%></li>
  <li><%= f.label :link, "Will this be a link?"%><%= f.check_box :link, :value => "1" %></li>
</ul>
<div><%= f.submit %>

<% end %>